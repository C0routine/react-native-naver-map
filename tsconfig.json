{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "paths": {
      "react-native-nmap": [
        "./src/index"
      ]
    }
  },
  "include": [
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
