{
  "name": "react-native-nmap",
  "version": "0.1.0",
  "description": "react-native bridge for naver map",
  "main": "index.js",
  "author": "QuadFlask <pop2331@gmail.com> (https://github.com/quadflask)",
  "license": "MIT",
  "homepage": "https://github.com/quadflask/react-native-naver-map",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "bugs": {
    "url": "https://github.com/quadflask/react-native-nmap/issues"
  },
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "pods": "cd example && pod-install --quiet",
    "build:examplets": "tsc -p ./tsconfig.json --outDir ./example/map/",
    "build": "tsc -p ./tsconfig.json",
    "deploy": "npm version patch; npm run build; npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quadflask/react-native-naver-map"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react-native",
    "navermap"
  ],
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-native": ">=0.60.5"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/runtime": "^7.17.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react": "^17.0.39",
    "@types/react-native": "0.66.15",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^6.3.0",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.66.2",
    "react": "^17.0.2",
    "react-native": "^0.67.2",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "react-native"
  },
  "files": [
    "src",
    "lib",
    "ios",
    "android",
    "react-native-nmap.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
